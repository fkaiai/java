    <bean id="firstComJobDetail" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
        <property name="jobClass" value="cn.ee.ff.test.quartz.FirstScheduledJob" />
        <property name="jobDataMap">
            <map>
                <entry key="myBean" value-ref="myBean"/>
            </map>
        </property>
        <property name="Durability" value="true"/>
    </bean>

    <!--距离当前时间1秒之后执行，之后每司两秒执行一次-->
